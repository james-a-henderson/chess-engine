    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "isolatedModules": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.test.ts", "node_modules"]
}